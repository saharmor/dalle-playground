# https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation

# Frontend
[*.{js,jsx,ts,tsx}]
charset = utf-8
indent_style = space
indent_size = 2

# Backend
[*.{py}]
charset = utf-8
indent_style = space
indent_size = 4
